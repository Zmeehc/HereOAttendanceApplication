<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp">

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<!-- Left accent bar -->
		<View
			android:id="@+id/leftAccent"
			android:layout_width="8dp"
			android:layout_height="0dp"
			android:background="@color/green4"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent" />

		<!-- Three dots menu icon -->
		<ImageView
			android:id="@+id/menuIcon"
			android:layout_width="24dp"
			android:layout_height="24dp"
			android:contentDescription="More options"
			android:src="@drawable/three_dots"
			android:layout_marginTop="12dp"
			android:layout_marginEnd="12dp"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toTopOf="parent" />

		<!-- Title: Subject | Room -->
		<TextView
			android:id="@+id/courseTitle"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="16dp"
			android:layout_marginTop="12dp"
			android:layout_marginEnd="12dp"
			android:fontFamily="@font/poppins_semibold"
			android:text="Subject Name | Room"
			android:textColor="@color/green"
			android:textSize="18sp"
			app:layout_constraintEnd_toStartOf="@id/menuIcon"
			app:layout_constraintStart_toEndOf="@id/leftAccent"
			app:layout_constraintTop_toTopOf="parent" />

		<!-- Subtitle: Time | Days -->
		<TextView
			android:id="@+id/courseSchedule"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginEnd="12dp"
			android:fontFamily="@font/poppins_regular"
			android:text="Time Start - Time End | Day"
			android:textColor="@color/black"
			android:textSize="15sp"
			app:layout_constraintEnd_toStartOf="@id/menuIcon"
			app:layout_constraintStart_toStartOf="@id/courseTitle"
			app:layout_constraintTop_toBottomOf="@id/courseTitle" />

		<!-- Bottom row: Students (left) | Sessions (right) -->
		<LinearLayout
			android:id="@+id/bottomRow"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="7dp"
			android:gravity="center_vertical"
			android:orientation="horizontal"
			app:layout_constraintStart_toStartOf="@id/courseSchedule"
			app:layout_constraintTop_toBottomOf="@id/courseSchedule">

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				android:orientation="horizontal">

				<ImageView
					android:layout_width="24dp"
					android:layout_height="24dp"
					android:contentDescription="Students"
					android:src="@drawable/session_ic" />

				<TextView
					android:id="@+id/studentsText"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="12dp"
					android:fontFamily="@font/poppins_regular"
					android:text="Sessions: 0"
					android:textColor="@color/black"
					android:textSize="16sp" />

			</LinearLayout>

			
		</LinearLayout>

		<!-- Teacher Profile Section -->
		<LinearLayout
			android:id="@+id/teacherProfileSection"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dp"
			android:layout_marginBottom="12dp"
			android:gravity="center_vertical"
			android:orientation="horizontal"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toStartOf="@id/courseSchedule"
			app:layout_constraintTop_toBottomOf="@id/bottomRow">

			<!-- Teacher Profile Picture -->
			<de.hdodenhof.circleimageview.CircleImageView
				android:id="@+id/teacherProfilePicture"
				android:layout_width="32dp"
				android:layout_height="32dp"
				android:src="@drawable/baseline_person_24"
				android:contentDescription="Teacher Profile Picture"
				app:civ_border_width="2dp"
				app:civ_border_color="@color/green" />

			<!-- Teacher Name -->
			<TextView
				android:id="@+id/teacherName"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="8dp"
				android:fontFamily="@font/poppins_regular"
				android:text="First Last"
				android:textColor="@color/black"
				android:textSize="14sp" />

		</LinearLayout>

	</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>