<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Left green bar -->
        <View
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@color/green"
            android:layout_marginEnd="16dp" />

        <!-- Main content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Top row: Student name and overflow menu -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Student name -->
                <TextView
                    android:id="@+id/studentNameText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Juan S. Dela Cruz"
                    android:textColor="@color/red"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textStyle="bold" />

                <!-- Overflow menu -->
                <ImageView
                    android:id="@+id/overflowMenu"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/baseline_more_vert_24"
                    android:padding="4dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>

            <!-- Absence count row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <!-- Absence icon -->
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/absent_icon"
                    android:layout_marginEnd="8dp" />

                <!-- Absence count text -->
                <TextView
                    android:id="@+id/absenceCountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No. of absences: 4"
                    android:textColor="@color/red"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_medium" />

            </LinearLayout>

            <!-- Course information container -->
            <LinearLayout
                android:id="@+id/courseContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp" />

            <!-- Send SMS button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/sendSmsButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:text="Send SMS Notification"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_medium"
                app:backgroundTint="@color/green"
                app:icon="@drawable/message_icon"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:cornerRadius="8dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
