<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AboutActivity">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/green"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="About"
        app:titleTextColor="@color/white">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="start"
            android:layout_marginStart="16dp"
            android:src="@drawable/baseline_arrow_back_24"
            android:tint="@color/white" />

    </androidx.appcompat.widget.Toolbar>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- App Logo/Icon -->
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp"
                android:src="@drawable/app_icon"
                android:contentDescription="HereO Attendance Logo" />

            <!-- App Name -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:text="HereO Attendance"
                android:textColor="@color/green"
                android:textSize="28sp"
                android:layout_marginBottom="8dp" />

            <!-- Version -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:text="Version 1.0.0"
                android:textColor="@color/gray"
                android:textSize="16sp"
                android:layout_marginBottom="32dp" />

            <!-- Description -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="HereO Attendance is a comprehensive digital attendance management system designed specifically for educational institutions. Our platform streamlines the attendance tracking process for both teachers and students, providing real-time monitoring, detailed reports, and seamless integration with modern educational workflows."
                android:textColor="@color/black"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="32dp" />

            <!-- Features Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="Key Features"
                android:textColor="@color/green"
                android:textSize="20sp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="• Real-time attendance tracking\n• Automated SMS notifications\n• Comprehensive reporting system\n• Student and teacher dashboards\n• Course management tools\n• Archive and export functionality\n• Secure data storage\n• Cross-platform compatibility"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="32dp" />

            <!-- Mission Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="Our Mission"
                android:textColor="@color/green"
                android:textSize="20sp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="To revolutionize educational attendance management by providing innovative, user-friendly solutions that enhance learning experiences and administrative efficiency. We believe in empowering educators with the tools they need to focus on what matters most - teaching and student success."
                android:textColor="@color/black"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="32dp" />

            <!-- Technology Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="Technology"
                android:textColor="@color/green"
                android:textSize="20sp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="Built with modern technologies including Android development, Firebase for real-time database management, and cloud storage solutions. Our platform ensures secure, scalable, and reliable performance for educational institutions of all sizes."
                android:textColor="@color/black"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="32dp" />

            <!-- Contact Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="Contact Us"
                android:textColor="@color/green"
                android:textSize="20sp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="Email: christianllavore528@gmail.com\nPhone: (+63) 966 399 6287\nAddress: Zone 4, Barangay Tiguma, Pagadian City 7016, Zamboanga del Sur"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="32dp" />

            <!-- Copyright -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:text="© 2024 HereO Attendance. All rights reserved."
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:layout_marginTop="16dp" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
