<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".HelpSupportActivity">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/green"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Help &amp; Support"
        app:titleTextColor="@color/white">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="start"
            android:layout_marginStart="16dp"
            android:src="@drawable/baseline_arrow_back_24"
            app:tint="@color/white" />

    </androidx.appcompat.widget.Toolbar>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:text="Help &amp; Support"
                android:textColor="@color/green"
                android:textSize="24sp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:text="We're here to help you get the most out of HereO Attendance"
                android:textColor="@color/gray"
                android:textSize="16sp"
                android:layout_marginBottom="32dp" />

            <!-- FAQ Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="Frequently Asked Questions"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginBottom="16dp" />

            <!-- FAQ Item 1 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="Q: How do I mark attendance for my students?"
                android:textColor="@color/green"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="A: Navigate to your course details, select the current session, and tap on student names to mark them as present, absent, or late. The system will automatically save your selections."
                android:textColor="@color/black"
                android:textSize="14sp"
                android:lineSpacingExtra="2dp"
                android:layout_marginBottom="16dp" />

            <!-- FAQ Item 2 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="Q: How can I view attendance reports?"
                android:textColor="@color/green"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="A: Go to the Reports section from your dashboard, select the desired course and date range, then tap 'Export Record' to generate and download detailed attendance reports."
                android:textColor="@color/black"
                android:textSize="14sp"
                android:lineSpacingExtra="2dp"
                android:layout_marginBottom="16dp" />

            <!-- FAQ Item 3 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="Q: How do SMS notifications work?"
                android:textColor="@color/green"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="A: The system automatically sends SMS alerts to parents/guardians when students accumulate 3 or more absences. You can view and manage these alerts in the SMS Alerts section."
                android:textColor="@color/black"
                android:textSize="14sp"
                android:lineSpacingExtra="2dp"
                android:layout_marginBottom="16dp" />

            <!-- FAQ Item 4 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="Q: Can I archive old courses?"
                android:textColor="@color/green"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="A: Yes, you can archive completed courses from the Active Courses section. Archived courses can be accessed later from the Archives section for reference and reporting."
                android:textColor="@color/black"
                android:textSize="14sp"
                android:lineSpacingExtra="2dp"
                android:layout_marginBottom="16dp" />

            <!-- FAQ Item 5 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="Q: How do I update my profile information?"
                android:textColor="@color/green"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="A: Tap on your profile picture in the navigation drawer, then select 'Edit Profile' to update your personal information, contact details, and profile picture."
                android:textColor="@color/black"
                android:textSize="14sp"
                android:lineSpacingExtra="2dp"
                android:layout_marginBottom="32dp" />

            <!-- Troubleshooting Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="Troubleshooting"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="If you're experiencing issues with the app:\n\n• Ensure you have a stable internet connection\n• Try logging out and logging back in\n• Clear the app cache from your device settings\n• Make sure you're using the latest version of the app\n• Check that your device has sufficient storage space"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="32dp" />

            <!-- Contact Support Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="Contact Support"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="Need additional help? Our support team is here to assist you:\n\nEmail: christianllavore528@gmail.com\nPhone: (+63) 966 399 6287\nAddress: Zone 4, Barangay Tiguma, Pagadian City 7016, Zamboanga del Sur\n\nWe typically respond to inquiries within 24 hours during business days."
                android:textColor="@color/black"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="24dp" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
