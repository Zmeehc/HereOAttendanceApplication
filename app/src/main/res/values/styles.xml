<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Custom dialog style for better visibility -->
    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>

    <!-- Green Toggle Switch Style -->
    <style name="GreenToggleSwitch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:thumbTint">@color/white</item>
        <item name="android:trackTint">@color/green</item>
    </style>

    <!-- Navigation Drawer Item Text Style -->
    <style name="NavDrawerItemText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:padding">16dp</item>
    </style>
</resources>